<%= form_for(@barang) do |f| %>
  <% if @barang.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@barang.errors.count, "error") %> prohibited this barang from being saved:</h2>

      <ul>
      <% @barang.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
    <div class="field">
      <%= f.label :nama %><br>
      <%= f.text_field :nama, class: 'form-control'%>
    </div><br>
    <div class="field">
      <%= f.label :pilih_kategori %><br>
      <%= f.collection_select(:kategori_id, @kategoris, :id, :nama, {prompt: "pilih kategori"}, class: 'form-control') %>
    </div><br>
    <div class="field">
      <%= f.label :pilih_merk %><br>
      <%= f.collection_select(:merk_id, @merks, :id, :nama, {prompt: "pilih merk"}, class: 'form-control') %>
    </div><br>

    <fieldset>
    <legend>Jumlah :</legend>
    <div class="field">
      <%= f.label :baik %><br>
      <%= f.number_field :baik, class: 'form-control'%>
    </div>
    <div class="field">
      <%= f.label :rusak %><br>
      <%= f.number_field :rusak, class: 'form-control' %>
    </div>
    </fieldset><br/>

    <div class="field">
      <%= f.label :masuk %><br>
      <%= f.date_select :masuk, class: 'form-control' %>
    </div><br>
    <div class="field">
      <%= f.label :gambar %><br>
      <%= f.file_field :gambar, class: 'form-control' %>
    </div><br>
    <div class="field">
      <%= f.label :keterangan %><br>
      <%= f.text_area :keterangan, class: 'form-control' %>
    </div><br>
    <div class="actions">
      <%= f.submit "simpan", class: 'btn btn-primary'%>
      <%= link_to 'kembali', barangs_path, class: 'btn btn-primary'%> 
    </div>
    </div>
  </div>
<% end %>